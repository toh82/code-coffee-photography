<!DOCTYPE html>
<html lang="{{lang}}">
  <head itemscope itemtype="http://schema.org/WebSite">
    {{> htmlheader}}
    <meta name="author" content="{{author}}">
    <title itemprop='name'>{{site.header.title_prefix}} - {{headline}} {{#if subline}}{{subline}}{{/if}}</title>

    <meta property="og:title" content="{{headline}} {{subline}}" />
    <meta property="og:url" content="{{getUrl relativePath}}" />
    <meta property="og:type" content="article" />
    <meta property="og:article:author" content="{{author}}">
    <meta property="og:article:published_time" content="{{formatTime date "YYYY-MM-DD"}}">
    {{#if previewImage}}
    <meta property="og:image" content="{{getUrl 'assets/media/'}}{{previewImage}}" />
    {{/if}}
    {{> analytics}}
  </head>
  <body class="ccp  ccp--article">
    {{> navigation}}
    <main class="main container" itemscope itemtype="http://schema.org/Article">
      <header role="banner">
        <h1 itemprop="headline">{{headline}} {{#if subline}}<span class="subline">{{subline}}</span>{{/if}}</h1>
        <div class="article-meta">
          <div>
            <img class="author-image" src="{{site.url.static}}assets/media/me.jpg" alt="Picture of Tobias Hartmann">
          </div>
          <div class="no-margin">
            <p class="author">von <span itemprop="author" >{{author}}</span></p>
            <time datetime="{{formatTime date "YYYY-MM-DD"}}">{{formatTime date "DD.MM.YYYY"}}</time>
            <meta itemprop="datePublished" content="{{formatTime date "YYYY-MM-DD"}}"><br>
            {{> shareOnTwitter
              path=relativePath
              text=headline
              author=twitter }}
          </div>
        </div>
      </header>
      {{#markdown}}{{> @partial-block }}{{/markdown}}
    </main>
    <div class="container">
      <ul class="list  list--inline  list--unstyled" itemprop="keywords">
        {{#formatTags tags}}
        <li class="list__item"><div class="tag">{{tag}}</div></li>
        {{/formatTags}}
      </ul>

      {{> flattr}}
    </div>

    {{#if activatedisqus}}
    <div class="container">{{> disqus path=relativePath}}</div>
    {{/if}}

    {{> footer}}

    {{#if codehighlighting}}
    <link rel="stylesheet"
          href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    {{/if}}
  </body>
</html>
